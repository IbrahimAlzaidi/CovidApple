<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_dark"
    android:padding="8dp"
    >

    <TextView
        android:id="@+id/question_text"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:gravity="center"
        android:text="Do you need help? \nCOVID-19"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COVID-19 symptomps \n 1- Fever or chills Cough\n 2-
Shortness of breath or difficulty breathing
Fatigue
Muscle or body aches
Headache
New loss of taste or smell
Sore throat
Congestion or runny nose
Nausea or vomiting
Diarrhea
"

        app:layout_constraintEnd_toEndOf="@+id/question_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/question_text"
        app:layout_constraintTop_toBottomOf="@+id/question_text"
        style="@style/expanded_card_style" />

    <TextView
        android:id="@+id/read_more_symptomps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read more"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="COVID-19 prevention\n 1. Wash your hands frequently and carefully\n
        2. Avoid touching your face\n 3. Stop shaking hands and hugging people — for now\n4. Don’t share personal items\n5. Cover your mouth and nose when you cough and sneeze\n6. Clean and disinfect surfaces

"
        android:layout_marginTop="@dimen/small_margin"
        style="@style/expanded_card_style"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
    <TextView
        android:id="@+id/read_more_prevention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        android:layout_marginEnd="16dp"
        android:text="Read more"
        />

    <TextView
        android:id="@+id/top_countries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="types of vaccinations"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/top_countries"
        app:layout_constraintStart_toStartOf="@+id/top_countries"
        app:layout_constraintTop_toBottomOf="@+id/top_countries">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/vaccine1_card"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/rec_green_shape"
                android:padding="10dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/prevention"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/vaccine1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Pfizer"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp"/>

                    <ImageView
                        android:id="@+id/vaccine1_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/pfizer_ic"
                        android:gravity="center"
                        android:textColor="@color/teal_200"
                        android:textSize="35sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/vaccine2_card"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/rec_green_shape"
                android:padding="10dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/prevention"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/vaccine2"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="AstraZeneca"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp"
                        />

                    <ImageView
                        android:id="@+id/vaccine2_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/astraceneca_ic"
                        android:gravity="center"
                        android:textColor="@color/teal_200"
                        android:textSize="35sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/vaccine3_card"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/rec_green_shape"
                android:padding="10dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/prevention"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/vaccine3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Moderna"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp"/>

                    <ImageView
                        android:id="@+id/vaccine3_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/moderna_ic"
                        android:gravity="center"
                        android:textColor="@color/teal_200"
                        android:textSize="35sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/vaccine4_card"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/rec_green_shape"
                android:padding="10dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/prevention"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/vaccine4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Johnson &amp; Johnson"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:layout_marginBottom="20dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/vaccine4_image"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_johnson_and_johnson"
                        android:gravity="center"
                        android:textColor="@color/teal_200"
                        android:textSize="35sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/vaccine5_card"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/rec_green_shape"
                android:padding="10dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/prevention"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/vaccine5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="sinopharm "
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp"/>

                    <ImageView
                        android:id="@+id/vaccine5_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_sinopharm"
                        android:gravity="center"
                        android:textColor="@color/teal_200"
                        android:textSize="35sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/vaccine6_card"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/rec_green_shape"
                android:padding="10dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/prevention"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/vaccine6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Green Apple Team "
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/vaccine6_image"
                        android:layout_width="52dp"
                        android:layout_height="49dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_doctor_pana"
                        android:gravity="center"
                        android:textColor="@color/teal_200"
                        android:textSize="35sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </HorizontalScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>